<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|right"
        android:orientation="horizontal"
        android:columnCount="4"
        android:rowCount="1">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateIntervalSeekBar"
            android:layout_gravity="center_vertical"
            android:layout_column="1"
            android:layout_row="0"
            android:max="@integer/base_update_interval"
            android:progress="@integer/base_update_interval"
            android:maxWidth="@dimen/update_interval_seek_bar_width"
            android:minWidth="@dimen/update_interval_seek_bar_width"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updateInterval"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_vertical"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colorButton"
            android:id="@+id/colorButton"
            android:minWidth="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="right"
            android:onClick="toggleColor"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startButton"
            android:id="@+id/startButton"
            android:minWidth="100dp"
            android:onClick="toggleProcessing"
            android:layout_row="0"
            android:layout_column="3"
            />

    </GridLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        >

        <org.ifno.DrawingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drawing_view"/>
    </LinearLayout>

</LinearLayout>
